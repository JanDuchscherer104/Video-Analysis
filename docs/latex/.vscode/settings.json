{
    // LaTeX Workshop build configuration
    "latex-workshop.latex.build.forceRecipeUsage": false,
    "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.intellisense.citation.backend": "bibtex",
    "latex-workshop.intellisense.citation.type": "inline",
    "latex-workshop.latex.rootFile.doNotPrompt": true,
    "latex-workshop.latex.rootFile.useSubFile": false,
    
    // LaTeX Workshop tools
    "latex-workshop.latex.tools": [
        {
            "name": "make",
            "command": "make",
            "args": [],
            "env": {}
        },
        {
            "name": "make-clean",
            "command": "make",
            "args": ["clean"],
            "env": {}
        },
        {
            "name": "make-view",
            "command": "make",
            "args": ["view"],
            "env": {}
        }
    ],
    
    // LaTeX Workshop recipes
    "latex-workshop.latex.recipes": [
        {
            "name": "Make Build",
            "tools": [
                "make"
            ]
        },
        {
            "name": "latexmk",
            "tools": [
                "latexmk"
            ]
        },
        {
            "name": "latexmk (latexmkrc)",
            "tools": [
                "latexmk_rconly"
            ]
        },
        {
            "name": "latexmk (lualatex)",
            "tools": [
                "lualatexmk"
            ]
        },
        {
            "name": "latexmk (xelatex)",
            "tools": [
                "xelatexmk"
            ]
        },
        {
            "name": "pdflatex -> bibtex -> pdflatex * 2",
            "tools": [
                "pdflatex",
                "bibtex",
                "pdflatex",
                "pdflatex"
            ]
        },
        {
            "name": "Compile Rnw files",
            "tools": [
                "rnw2tex",
                "latexmk"
            ]
        },
        {
            "name": "Compile Jnw files",
            "tools": [
                "jnw2tex",
                "latexmk"
            ]
        },
        {
            "name": "Compile Pnw files",
            "tools": [
                "pnw2tex",
                "latexmk"
            ]
        },
        {
            "name": "tectonic",
            "tools": [
                "tectonic"
            ]
        }
    ],
    
    // Output and cleaning configuration
    "latex-workshop.latex.outDir": ".build",
    "latex-workshop.latex.clean.fileTypes": [
        "*.aux",
        "*.bbl",
        "*.blg",
        "*.idx",
        "*.ind",
        "*.lof",
        "*.lot",
        "*.out",
        "*.toc",
        "*.acn",
        "*.acr",
        "*.alg",
        "*.glg",
        "*.glo",
        "*.gls",
        "*.fls",
        "*.log",
        "*.fdb_latexmk",
        "*.synctex.gz"
    ],
    "latex-workshop.view.pdf.viewer": "tab",
    
    // WARNING SUPPRESSION SETTINGS
    "latex-workshop.message.warning.show": false,
    "latex-workshop.message.badbox.show": false,
    "latex-workshop.message.information.show": false,
    "latex-workshop.latex.lint.onChange": false,
    "latex-workshop.latex.lint.onSave": false,
    "latex-workshop.latex.lint.run": "never",
    "problems.decorations.enabled": false,
    
    // Set default recipe
    "latex-workshop.latex.recipe.default": "Make Build"
}